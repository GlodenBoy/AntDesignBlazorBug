@page "/page"

<h3>Page</h3>

<div>
    <Popover  Trigger="new[] { Trigger.Click }" OnVisibleChange="OnVisibleChange" ComplexAutoCloseAndVisible="@true" Visible="@_visible">
        <ContentTemplate>
            <div style="min-width: 120px">
                this is bug!
            </div>

        </ContentTemplate>
        <ChildContent>
            <Button Size="small" Type="@ButtonType.Primary">
                <Icon Type="plus" Theme="outline"/>
            </Button>

        </ChildContent>
    </Popover>
    
    <div>
        When there was only one Popover on this page
        When switching pages, the ComplexAutoCloseAndVisible property will be invalid, and it cannot be automatically closed by clicking other areas
    </div>
    
    <div>
        You can switch back and forth between page and page2 by clicking the button above and then clicking on other areas to close
    </div>
</div>





@code {

    private void OnVisibleChange(bool obj)
    {
        _visible = obj;
    }

    private bool _visible = false;
}